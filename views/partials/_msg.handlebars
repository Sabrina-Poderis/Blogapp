{{#if success_msg}}
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="2500" style="position: absolute; top: 80px; right: 120px; z-index:5;">
        <div class="toast-header ">
            <strong class="mr-auto text-success">BlogApp</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            {{success_msg}}
        </div>
    </div>

    <script>
        $('.toast').toast('show');
    </script>
{{/if}}

