<div class="card">
    {{#if user}}
        <h5 class="card-header">Ol√° {{user.name}}!</h5>
        <div class="card-body">
            <a href="/perfil/" class="btn btn-success">Perfil</a>
            <a href="/perfil/minhas-postagens" class="btn btn-success">Postagens</a>
            <a href="/auth/logout" class="btn btn-success">Sair</a>
        </div>
    {{else}}
      <h5 class="card-header">Login</h5>
      <div class="card-body">
            <form action="/auth/login-side" method="post">
                <div class="form-group">
                    <label>Email</label>
                   
                    {{#if formErrors.fieldEmailError}}
                        <input type="email" class="form-control is-invalid" name="email" placeholder="email@exemplo.com">
                        <div class="invalid-feedback">
                            {{formErrors.fieldEmailError}}
                        </div>               
                    {{else}}                
                        <input type="email" class="form-control" name="email" placeholder="email@exemplo.com">
                    {{/if}}
                </div>
                <div class="form-group">
                    <label>Senha</label>
                    {{#if formErrors.fieldPasswordError}}
                        <input type="password" class="form-control is-invalid" name="password">
                        <div class="invalid-feedback">
                            {{formErrors.fieldPasswordError}}
                        </div>               
                    {{else}}                
                        <input type="password" class="form-control" name="password"/>
                    {{/if}}
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/auth/registro">Novo aqui? Registre-se!</a>
      </div>
    {{/if}}
</div>