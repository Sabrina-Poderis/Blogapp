<h3>Editar Caterogia: </h3>
<form action="/admin/categorias/edit" method="POST">
    {{#if formErrors.fieldIDValue}}
        <input type="hidden" name="id" value="{{formErrors.fieldIDValue}}"/>
    {{else}}
        <input type="hidden" name="id" value="{{category._id}}"/>
    {{/if}}
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="nome">Nome:</label>
            {{#if formErrors.fieldNameError}}
                <input type="text" class="form-control is-invalid" name="name" value="{{formErrors.fieldNameValue}}">
                <div class="invalid-feedback">
                   {{formErrors.fieldNameError}}
                </div>               
            {{else}} 
                <input type="text" class="form-control" name="name" value="{{category.name}}"/>
            {{/if}}      
        </div>
    </div>
    <div class="form-row">
        <button class="btn btn-success" type="submit">Editar Categoria</button>
    </div>
</form>