<h2>Lista de Categorias</h2>
<hr/>
<a href="/admin/categorias/add" class="btn btn-success mb-4">Nova Categoria</a>

{{#if categories}}
    {{#each categories}}
        <div class="row-sm-6">
            <div class="card mb-5">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{slug}}<br/>Data: {{#formatDate date}}{{/formatDate}}</p>
                    <div class="row">
                        <a href="/admin/categorias/edit/{{_id}}" class="mr-4 ml-3 btn btn-warning">                           
                            Editar
                        </a>
                        <form action="/admin/categorias/deletar" method="POST">
                            <input type="hidden" name="id" value="{{_id}}"/>
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <hr class="mt-5"/>
    <h2 class="text-center">NÃ£o existem categorias, crie uma!</h2>
{{/if}}