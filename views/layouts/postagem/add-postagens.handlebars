{{#each errosFormulario}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h3>Nova Postagem: </h3>
<form action="/perfil/minhas-postagens/nova" method="POST">
    <input type="hidden" name="user_id" value="{{user._id}}"/>
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="titulo">Título:</label>
            <input type="text" class="form-control" name="titulo"/>
        </div>

        <div class="col-md-6 mb-3">
            <label for="descricao">Descrição:</label>
            <input type="text" class="form-control" name="descricao"/>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="slug">Slug:</label>
            <input type="text" class="form-control" name="slug"/>
        </div>
        <div class="col-md-6 mb-3">
            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select">
                {{#if categorias}}
                    <option value=""></option>
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{/each}}
                {{else}}
                    <option value="">Nenhuma categoria registrada</option>
                {{/if}}
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="conteudo">Conteúdo:</label>
            <textarea type="text" class="form-control" name="conteudo"></textarea>
        </div>
    </div>
    <div class="form-row">
        <button class="btn btn-primary" type="submit">Criar Postagem</button>
    </div>
</form>