<h2 class="text-center">Crie sua Conta!</h2>
<form action="/auth/registro" method="POST">
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="nome">Nome:</label>            
            {{#if formErrors.fieldNameError}}
                <input type="text" class="form-control is-invalid" name="name">
                <div class="invalid-feedback">
                   {{formErrors.fieldNameError}}
                </div>               
            {{else}} 
                <input type="text" class="form-control" name="name"/>
            {{/if}}           
        </div>
            
        <div class="col-md-6 mb-3">
            <label for="sobrenome">Sobrenome:</label>
            {{#if formErrors.fieldSurnameError}}
                <input type="text" class="form-control is-invalid" name="surname">
                <div class="invalid-feedback">
                   {{formErrors.fieldSurnameError}}
                </div>               
            {{else}}                
                <input type="text" class="form-control" name="surname"/>
            {{/if}}
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="nome_usuario">Usuário:</label>
            {{#if formErrors.fieldUsernameError}}
                <input type="text" class="form-control is-invalid" name="user_name">
                <div class="invalid-feedback">
                   {{formErrors.fieldUsernameError}}
                </div>               
            {{else}}                
                <input type="text" class="form-control" name="user_name"/>
            {{/if}}
        </div>

        <div class="col-md-6 mb-3">
            <label for="email">Email:</label>
            {{#if formErrors.fieldEmailError}}
                <input type="email" class="form-control is-invalid" name="email">
                <div class="invalid-feedback">
                   {{formErrors.fieldEmailError}}
                </div>               
            {{else}}                
                <input type="email" class="form-control" name="email"/>
            {{/if}}
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="senha">Senha:</label>
            {{#if formErrors.fieldPasswordError}}
                <input type="password" class="form-control is-invalid" name="password">
                <div class="invalid-feedback">
                   {{formErrors.fieldPasswordError}}
                </div>               
            {{else}}                
                <input type="password" class="form-control" name="password"/>
            {{/if}}
        </div>
        <div class="col-md-6 mb-3">
            <label for="confirmacaoSenha">Confirme sua senha:</label>
            {{#if formErrors.fieldPasswordConfirmationError}}
                <input type="password" class="form-control is-invalid" name="password_confirmation">
                <div class="invalid-feedback">
                   {{formErrors.fieldPasswordConfirmationError}}
                </div>               
            {{else}}                
                <input type="password" class="form-control" name="password_confirmation"/>
            {{/if}}
        </div>
    </div>

    <div class="form-row">
        <button class="btn btn-success" type="submit">Criar Usuário</button>
    </div>
</form>