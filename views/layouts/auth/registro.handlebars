{{#each errosFormulario}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h2 class="text-center">Crie sua Conta!</h2>
<form action="/auth/registro" method="POST">
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" name="nome"/>
        </div>

        <div class="col-md-6 mb-3">
            <label for="sobrenome">Sobrenome:</label>
            <input type="text" class="form-control" name="sobrenome"/>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="nome_usuario">Usuário:</label>
            <input type="text" class="form-control" name="nome_usuario"/>
        </div>

        <div class="col-md-6 mb-3">
            <label for="email">Email:</label>
            <input type="email" class="form-control" name="email"/>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="senha">Senha:</label>
            <input type="password" class="form-control" name="senha"/>
        </div>
        <div class="col-md-6 mb-3">
            <label for="confirmacaoSenha">Confirme sua senha:</label>
            <input type="password" class="form-control" name="confirmacao_senha"/>
        </div>
    </div>

    <div class="form-row">
        <button class="btn btn-success" type="submit">Criar Usuário</button>
    </div>
</form>