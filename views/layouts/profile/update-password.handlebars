<h3 class="mt-5">Alterar Senha</h3>
<hr>
<form action="/perfil/edit-senha" method="post">
    <input type="hidden" value="{{user._id}}" name="id"/>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label>Nova senha:</label>
            {{#if formErrors.fieldNewPasswordError}}
                <input type="password" class="form-control is-invalid" name="new_password">
                <div class="invalid-feedback">
                   {{formErrors.fieldNewPasswordError}}
                </div>               
            {{else}}               
                <input type="password" class="form-control" name="new_password" >
            {{/if}}
        </div>

        <div class="col-md-4 mb-3">
            <label for="senha_confirmada">Confirme a nova senha:</label>
            {{#if formErrors.fieldPasswordConfirmationError}}
                <input type="password" class="form-control is-invalid" name="password_confirmation">
                <div class="invalid-feedback">
                   {{formErrors.fieldPasswordConfirmationError}}
                </div>               
            {{else}}                
                <input type="password" class="form-control" name="password_confirmation"/>
            {{/if}}
        </div>
    </div>
    <button class="btn btn-success" type="submit">Alterar</button>
</form>