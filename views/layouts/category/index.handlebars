<div class="row">
    <div class="col-md-8">
        <h2 class="text-center">Lista de Categorias</h2>

        {{#if categories}}
            {{#each categories}}
                <div class="row-sm-6">
                    <div class="card mt-4">
                        <div class="card-body">
                            <a href="/categoria/{{slug}}">
                                <h5 class="card-title">
                                    {{name}}
                                </h5>
                            </a>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <hr/>
            <h3>NÃ£o existem categorias!</h3>
        {{/if}}
    </div>        
    <div class="col-md-4">
        {{>_side}}
    </div>
</div>